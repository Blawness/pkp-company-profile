# Server-only (do NOT use NEXT_PUBLIC_* for secrets)
PEXELS_API_KEY=your_pexels_api_key

# Public (safe to expose to the browser)
NEXT_PUBLIC_FORMSPREE_ID=your_formspree_id

# Used for metadata/sitemap/robots (recommended)
NEXT_PUBLIC_SITE_URL=http://localhost:3000


# Sanity CMS (for article content)
SANITY_PROJECT_ID=
SANITY_DATASET=production
SANITY_API_VERSION=2023-11-01
SANITY_READ_TOKEN=

# Optional: token for push-article API (server-to-server writes)
SANITY_WRITE_TOKEN=

# Draft preview secret (for API draft mode)
DRAFT_PREVIEW_SECRET=

